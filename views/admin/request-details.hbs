
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css" integrity="sha384-eoTu3+HydHRBIjnCVwsFyCpUDZHZSFKEJD0mc3ZqSBSb6YhZzRHeiomAUWCstIWo" crossorigin="anonymous">



<table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
     
      <th scope="col">User</th>
       <th scope="col">Request Product Details</th>
         {{!-- <th scope="col">Status</th> --}}
         <th></th>
         <th>Sent Email</th >
       
     
    
    </tr>
  </thead>
  <tbody>
   {{#each requestData}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      
      <td>{{this.name}}</td> 
    
     <td>ISBN13:{{this.request.ISBN13}}<br>
         Author:{{this.request.author}}<br>
         Email:{{this.request.email}}<br>
         title:{{this.request.title}}<br>
         Quantity:{{this.request.quantity}}<br>
         Number:{{this.request.number}}
     </td>
     <td></td>
     <td >

      <a href="/admin/nodemailer-form/{{this._id}}" class="btn  btn-lg active mt-3" role="button" aria-pressed="true"><i class="bi bi-envelope " style="color: red;"></i></a>
     </td>
     
     {{/each}}
    </tr>
  </tbody>
</table>