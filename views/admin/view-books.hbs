<div>
  <h2 class="text-center">Product Details</h2>
</div>
<table class="table" id="table_id">
  <thead class="thead-dark">
    <tr>

      <th scope="col">No</th>
      <th scope="col">Name</th>
      {{!-- <th scope="col">Description</th> --}}
      {{!-- <th scope="col">Author</th> --}}
      <th scope="col">Category</th>
    <th scope="col">Stock</th>
    <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col">Options</th>


    </tr>
  </thead>

  <tbody>
    {{#each productInfo}}

    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.name}}</td>
      {{!-- <td>{{this.author}}</td> --}}
      <td>{{this.category}}</td>
        <td>{{this.stock}}</td>
      <td>{{this.price}}</td>
      <td><img style="width:50px; height:50px" src="/product-images/{{this._id}}.jpg" alt="" ></td>
      <td>
        <button class="btn btn-success border border-dark"><a style="text-decoration:none; color:rgb(248, 241, 241)"
            href="/admin/edit-product/{{this._id}}">Edit</a></button>
        <button class="btn btn-danger border border-dark"><a style="text-decoration:none; color:rgb(248, 241, 241)"
            href="/admin/delete-product/{{this._id}}"
            onclick="return confirm('Do you want to delete {{this.name}}?')">Delete</a></button>

      </td>

      {{/each}}
    </tr>
  </tbody>
</table>

<!-- data-table-->
<script>
    $(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>
