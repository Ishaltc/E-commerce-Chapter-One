<section class="my-3">
    <div class="container " >



        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Image</th>
                    <th></th>
                    <th scope="col">Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Address</th>
                    <th>Delivery Status</th>
                     <th>Invoice</th>
                    <th></th>
                   
                    
                    {{!-- <th scope="col">Total Amount</th> --}}
                    <th scope="col" ></th>

                    <th> </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
              
               
                {{#each orderItems}}
               
                <tr>
                    <th scope="row">{{inc @index}}</th>

                    <td><img style="width:80px; height:100px" src="/product-images/{{this.product}}.jpg" alt=""></td>
                    <td>{{this.productname}}<br>
                   
                 Category:{{this.category}}<br>
                Quantity:{{this.quantity}}<br>
                   Price:{{this.price}}</td>
                    <td>{{this.date}}<br>
                    {{this.time}}
                    </td>
                    <td>{{this.status}}</td>
                    <td>{{this.deliveryDetails.name}}<br>
                         {{this.deliveryDetails.address}}<br>
                           {{this.deliveryDetails.city}}<br>
                          {{this.deliveryDetails.mobile}}</td>
                         {{!-- {{#if cancel:true}}
                         <td style="color: red;">cancelled</td>
                         {{else}} --}}
                           <td>{{this.orderStatus}}</td>
                           
                           
                       {{!-- {{/if}} --}}
                        {{#if this.isCancelled }}
                       
                     {{else}}
                          <td>

                    <a href="/invoice/'{{this._id}}','{{this.product}}" class="btn btn-dark " role="button" aria-disabled="true"><i class="bi bi-receipt-cutoff"></i></a>
                </td>
                        {{!-- {{else if this.orderStatus.}}  --}}
                    
                  <td><button type="submit" class="btn btn-default text-danger pull-right" onclick="cancelOrder('{{this._id}}','{{this.product}}')"><i class="bi bi-x-circle"></i></button></td>
                  
{{/if}}
                </tr>
                
              
                {{/each}}
              

            </tbody>
        </table>
    </div>
</section>
